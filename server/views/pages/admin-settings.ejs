<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - PISOWifi Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Mobile responsive */
        @media (max-width: 1023px) {
            .p-6 {
                padding: 1rem !important;
            }
        }
    </style>
</head>
<body class="bg-gray-200 min-h-screen lg:flex">
    <!-- Include Admin Sidebar -->
    <%- include('../partials/admin-sidebar', {currentPage: 'settings', user: user}) %>

    <!-- Main Content -->
    <div class="flex-1 overflow-y-auto pt-14 lg:pt-0 lg:ml-0">
        <div class="p-6">
            <div class="mb-6">
                <h1 class="text-xl font-bold text-black">Settings</h1>
                <p class="text-sm text-gray-600 mt-1">Manage your admin account, password, and portal behavior</p>
            </div>

            <!-- Success/Error Messages -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div id="successNotification" class="fixed top-6 right-6 bg-green-100 border border-green-400 text-green-700 px-6 py-4 rounded-lg flex items-center gap-3 shadow-lg z-50 transition-opacity duration-300">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"></path></svg>
                    <%= success %>
                </div>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
                <div id="errorNotification" class="fixed top-6 right-6 bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg flex items-center gap-3 shadow-lg z-50 transition-opacity duration-300">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"></path></svg>
                    <%= error %>
                </div>
            <% } %>

            <form action="/admin/settings" method="POST" class="space-y-6">
                <!-- Two Column Layout -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Account Information Section -->
                    <div class="bg-gray-50 border border-gray-300 rounded-lg">
                        <div class="px-4 py-3 border-b border-gray-300">
                            <h2 class="text-sm font-semibold text-black">Account Information</h2>
                        </div>
                        <div class="p-4 space-y-4">
                            <div>
                                <label class="block text-black text-sm font-medium mb-2">Username</label>
                                <input type="text" value="<%= user.username %>" disabled class="w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-lg text-gray-500 cursor-not-allowed">
                                <p class="text-xs text-gray-600 mt-1">Username cannot be changed</p>
                            </div>
                            <div>
                                <label class="block text-black text-sm font-medium mb-2">Email</label>
                                <input type="email" value="<%= user.email || 'Not set' %>" disabled class="w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-lg text-gray-500 cursor-not-allowed">
                                <p class="text-xs text-gray-600 mt-1">Email cannot be changed</p>
                            </div>
                        </div>
                    </div>

                    <!-- Password Change Section -->
                    <div class="bg-gray-50 border border-gray-300 rounded-lg">
                        <div class="px-4 py-3 border-b border-gray-300">
                            <h2 class="text-sm font-semibold text-black">Change Password</h2>
                        </div>
                        <div class="p-4 space-y-4">
                            <div class="p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                                <div class="flex items-start gap-2">
                                    <svg class="w-4 h-4 text-yellow-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/>
                                    </svg>
                                    <div class="text-xs text-yellow-800">
                                        <strong>Security Note:</strong> Enter your current password to change it. Leave fields blank if you don't want to change your password.
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-4">
                                <div>
                                    <label class="block text-black text-xs font-medium mb-2">Current Password</label>
                                    <input type="password" name="current_password" id="current_password"
                                        class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm"
                                        placeholder="Enter current password">
                                </div>
                                <div>
                                    <label class="block text-black text-xs font-medium mb-2">New Password</label>
                                    <input type="password" name="new_password" id="new_password" minlength="6"
                                        class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm"
                                        placeholder="Min 6 characters">
                                </div>
                                <div>
                                    <label class="block text-black text-xs font-medium mb-2">Confirm Password</label>
                                    <input type="password" name="confirm_password" id="confirm_password" minlength="6"
                                        class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm"
                                        placeholder="Confirm new password">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Session Management Section -->
                <div class="bg-gray-50 border border-gray-300 rounded-lg">
                    <div class="px-4 py-3 border-b border-gray-300">
                        <h2 class="text-sm font-semibold text-black">Session Management</h2>
                    </div>
                    <div class="p-4">
                        <label class="flex items-center justify-between p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors">
                            <div class="flex-1">
                                <div class="text-sm font-medium text-black">Auto-Pause on Disconnect</div>
                                <div class="text-xs text-gray-600 mt-1">Automatically pause timer when client disconnects from WiFi (e.g., moves out of range). Time will resume when reconnected.</div>
                            </div>
                            <div class="ml-4">
                                <input type="hidden" name="auto_pause_on_disconnect" value="0">
                                <input type="checkbox" id="auto_pause_on_disconnect" name="auto_pause_on_disconnect" value="1"
                                    <%= settings.auto_pause_on_disconnect ? 'checked' : '' %>
                                    class="w-5 h-5 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                            </div>
                        </label>
                        <div class="mt-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                            <label class="flex items-center justify-between p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors md:col-span-2">
                                <div class="flex-1">
                                    <div class="text-sm font-medium text-black">Auto-Resume After Pause</div>
                                    <div class="text-xs text-gray-600 mt-1">Automatically resume paused sessions after a set number of minutes.</div>
                                </div>
                                <div class="ml-4">
                                    <input type="hidden" name="auto_resume_on_pause" value="0">
                                    <input type="checkbox" id="auto_resume_on_pause" name="auto_resume_on_pause" value="1"
                                        <%= settings.auto_resume_on_pause ? 'checked' : '' %>
                                        class="w-5 h-5 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                                </div>
                            </label>
                            <div>
                                <label class="block text-black text-xs font-medium mb-2">Auto-Resume Minutes</label>
                                <input type="number" id="pause_resume_minutes" name="pause_resume_minutes"
                                    value="<%= settings.pause_resume_minutes || 0 %>" min="0" max="1440" step="1"
                                    class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm">
                                <p class="text-xs text-gray-500 mt-1">0 = disabled</p>
                            </div>
                        </div>
                        <div class="mt-3 p-3 bg-blue-50 border border-blue-200 rounded-lg">
                            <div class="flex items-start gap-2">
                                <svg class="w-4 h-4 text-blue-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                                </svg>
                                <div class="text-xs text-blue-800">
                                    <strong>Note:</strong> When enabled, clients can manually pause/resume their session from the portal page. This helps prevent time wastage when temporarily away from device.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Coin Abuse Protection Section -->
                <div class="bg-gray-50 border border-gray-300 rounded-lg">
                    <div class="px-4 py-3 border-b border-gray-300">
                        <h2 class="text-sm font-semibold text-black">Coin Abuse Protection</h2>
                    </div>
                    <div class="p-4">
                        <label class="flex items-center justify-between p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors">
                            <div class="flex-1">
                                <div class="text-sm font-medium text-black">Enable Abuse Protection</div>
                                <div class="text-xs text-gray-600 mt-1">Block clients who spam coin insertion attempts to prevent denial of service</div>
                            </div>
                            <div class="ml-4">
                                <input type="hidden" name="coin_abuse_protection" value="0">
                                <input type="checkbox" id="coin_abuse_protection" name="coin_abuse_protection" value="1"
                                    <%= settings.coin_abuse_protection ? 'checked' : '' %>
                                    class="w-5 h-5 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2"
                                    onchange="toggleAbuseSettings()">
                            </div>
                        </label>
                        
                        <div id="abuseSettingsPanel" style="<%= settings.coin_abuse_protection ? '' : 'display:none;' %>">
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
                                <div>
                                    <label class="block text-black text-xs font-medium mb-2" for="coin_attempt_limit">
                                        Max Attempts
                                    </label>
                                    <input type="number" id="coin_attempt_limit" name="coin_attempt_limit"
                                        value="<%= settings.coin_attempt_limit || 10 %>"
                                        min="3" max="100" step="1"
                                        class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm">
                                    <p class="text-xs text-gray-500 mt-1">Attempts allowed in time window</p>
                                </div>
                                
                                <div>
                                    <label class="block text-black text-xs font-medium mb-2" for="coin_attempt_window">
                                        Time Window (seconds)
                                    </label>
                                    <input type="number" id="coin_attempt_window" name="coin_attempt_window"
                                        value="<%= settings.coin_attempt_window || 60 %>"
                                        min="10" max="300" step="10"
                                        class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm">
                                    <p class="text-xs text-gray-500 mt-1">Time period to count attempts</p>
                                </div>
                                
                                <div>
                                    <label class="block text-black text-xs font-medium mb-2" for="coin_block_duration">
                                        Block Duration (seconds)
                                    </label>
                                    <input type="number" id="coin_block_duration" name="coin_block_duration"
                                        value="<%= settings.coin_block_duration || 300 %>"
                                        min="60" max="3600" step="60"
                                        class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm">
                                    <p class="text-xs text-gray-500 mt-1">How long to block abusers</p>
                                </div>
                            </div>
                            
                            <div class="mt-3 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                                <div class="flex items-start gap-2">
                                    <svg class="w-4 h-4 text-yellow-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/>
                                    </svg>
                                    <div class="text-xs text-yellow-800">
                                        <strong>Example:</strong> With defaults (10 attempts / 60 seconds), a client making more than 10 coin insertions in 1 minute will be blocked for 5 minutes.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- TTL Anti-Tethering Detection Section -->
                <div class="bg-gray-50 border border-gray-300 rounded-lg">
                <div class="px-4 py-3 border-b border-gray-300 flex items-center justify-between cursor-pointer" onclick="toggleTTLSection()">
                    <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/>
                        </svg>
                        <h2 class="text-sm font-semibold text-black">Anti-Tethering Detection (TTL)</h2>
                    </div>
                    <div class="flex items-center gap-3">
                        <span id="ttl-status-badge" class="px-2 py-1 text-xs font-medium rounded-full bg-gray-200 text-gray-600">Loading...</span>
                        <svg id="ttl-chevron" class="w-5 h-5 text-gray-400 transition-transform duration-200" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
                        </svg>
                    </div>
                </div>

                <div id="ttl-section" class="p-4" style="display: none;">
                    <p class="text-xs text-gray-600 mb-4">Prevent clients from sharing WiFi with other devices by monitoring IP packet TTL values.</p>
                    
                    <!-- TTL Settings Form -->
                    <div class="space-y-4">
                        <label class="flex items-center justify-between p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors">
                            <div class="flex-1">
                                <div class="text-sm font-medium text-black">Enable TTL Detection</div>
                                <div class="text-xs text-gray-600 mt-1">Monitor IP packet TTL values to detect internet tethering</div>
                            </div>
                            <div class="ml-4">
                                <input type="checkbox" id="ttl-enabled" 
                                    class="w-5 h-5 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                            </div>
                        </label>

                        <div id="ttl-settings-panel" style="display: none;">
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div>
                                    <label class="block text-black text-xs font-medium mb-2">Sensitivity Level</label>
                                    <select id="ttl-sensitivity" class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm">
                                        <option value="low">Low (±2 TTL)</option>
                                        <option value="medium" selected>Medium (±1 TTL)</option>
                                        <option value="high">High (Strict)</option>
                                    </select>
                                    <p class="text-xs text-gray-500 mt-1">Tolerance for TTL variance</p>
                                </div>
                                <div>
                                    <label class="block text-black text-xs font-medium mb-2">Alert Threshold</label>
                                    <input type="number" id="ttl-alert-threshold" value="5" min="1" max="50"
                                        class="w-full px-3 py-2 bg-white border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 text-sm">
                                    <p class="text-xs text-gray-500 mt-1">Anomalies before flagging</p>
                                </div>
                                <div class="flex items-end">
                                    <label class="flex items-center gap-2 p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors w-full">
                                        <input type="checkbox" id="ttl-auto-block" 
                                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                                        <span class="text-sm text-black">Auto-Block</span>
                                    </label>
                                </div>
                            </div>
                            
                            <div class="mt-4 flex gap-2">
                                <button type="button" onclick="saveTTLSettings()" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors text-sm font-medium">
                                    Save TTL Settings
                                </button>
                                <span id="ttl-save-message" class="text-sm text-green-600 self-center"></span>
                            </div>
                        </div>

                        <!-- Collapsible: Statistics -->
                        <div class="border border-gray-200 rounded-lg mt-4">
                            <div class="px-3 py-2 bg-gray-100 flex items-center justify-between cursor-pointer rounded-t-lg" onclick="toggleCollapsible('ttl-stats')">
                                <span class="text-xs font-medium text-gray-700">Detection Statistics</span>
                                <svg id="ttl-stats-chevron" class="w-4 h-4 text-gray-400 transition-transform duration-200 rotate-180" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
                                </svg>
                            </div>
                            <div id="ttl-stats" class="p-3 hidden">
                                <div class="grid grid-cols-3 gap-3">
                                    <div class="text-center p-2 bg-white rounded border border-gray-200">
                                        <div id="stat-active-violations" class="text-lg font-bold text-red-600">0</div>
                                        <div class="text-xs text-gray-500">Active Violations</div>
                                    </div>
                                    <div class="text-center p-2 bg-white rounded border border-gray-200">
                                        <div id="stat-total-anomalies" class="text-lg font-bold text-orange-600">0</div>
                                        <div class="text-xs text-gray-500">Total Anomalies</div>
                                    </div>
                                    <div class="text-center p-2 bg-white rounded border border-gray-200">
                                        <div id="stat-clients-flagged" class="text-lg font-bold text-blue-600">0</div>
                                        <div class="text-xs text-gray-500">Clients Flagged</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Collapsible: Violations -->
                        <div class="border border-gray-200 rounded-lg">
                            <div class="px-3 py-2 bg-gray-100 flex items-center justify-between cursor-pointer rounded-t-lg" onclick="toggleCollapsible('ttl-violations')">
                                <span class="text-xs font-medium text-gray-700">Recent Violations</span>
                                <div class="flex items-center gap-2">
                                    <button type="button" onclick="event.stopPropagation(); loadTTLViolations();" class="text-xs text-blue-600 hover:underline">Refresh</button>
                                    <svg id="ttl-violations-chevron" class="w-4 h-4 text-gray-400 transition-transform duration-200 rotate-180" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
                                    </svg>
                                </div>
                            </div>
                            <div id="ttl-violations" class="hidden">
                                <div id="ttl-violations-content" class="max-h-48 overflow-y-auto">
                                    <div class="p-3 text-center text-xs text-gray-500">No violations detected ✓</div>
                                </div>
                            </div>
                        </div>

                        <!-- Collapsible: Anomalies -->
                        <div class="border border-gray-200 rounded-lg">
                            <div class="px-3 py-2 bg-gray-100 flex items-center justify-between cursor-pointer rounded-t-lg" onclick="toggleCollapsible('ttl-anomalies')">
                                <span class="text-xs font-medium text-gray-700">Recent Anomalies</span>
                                <div class="flex items-center gap-2">
                                    <button type="button" onclick="event.stopPropagation(); loadTTLAnomalies();" class="text-xs text-blue-600 hover:underline">Refresh</button>
                                    <svg id="ttl-anomalies-chevron" class="w-4 h-4 text-gray-400 transition-transform duration-200 rotate-180" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
                                    </svg>
                                </div>
                            </div>
                            <div id="ttl-anomalies" class="hidden">
                                <div id="ttl-anomalies-content" class="max-h-48 overflow-y-auto">
                                    <div class="p-3 text-center text-xs text-gray-500">No anomalies recorded</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

                <div class="flex gap-4">
                    <button type="submit" class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z"/></svg>
                        Save Changes
                    </button>
                    <a href="/admin" class="px-6 py-2 bg-gray-400 hover:bg-gray-500 text-white rounded-lg transition-colors font-medium flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"/></svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Password validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const currentPass = document.getElementById('current_password').value;
            const newPass = document.getElementById('new_password').value;
            const confirmPass = document.getElementById('confirm_password').value;

            // If any password field is filled, all must be filled
            if (newPass || confirmPass || currentPass) {
                if (!currentPass) {
                    e.preventDefault();
                    alert('Please enter your current password');
                    return;
                }
                if (!newPass) {
                    e.preventDefault();
                    alert('Please enter a new password');
                    return;
                }
                if (newPass.length < 6) {
                    e.preventDefault();
                    alert('New password must be at least 6 characters long');
                    return;
                }
                if (newPass !== confirmPass) {
                    e.preventDefault();
                    alert('New passwords do not match');
                    return;
                }
            }
        });

        function toggleAbuseSettings() {
            const checkbox = document.getElementById('coin_abuse_protection');
            const panel = document.getElementById('abuseSettingsPanel');
            panel.style.display = checkbox.checked ? 'block' : 'none';
        }

        // TTL Functions
        function toggleTTLSection() {
            const section = document.getElementById('ttl-section');
            const chevron = document.getElementById('ttl-chevron');
            if (section.style.display === 'none') {
                section.style.display = 'block';
                chevron.style.transform = 'rotate(180deg)';
                loadTTLSettings();
            } else {
                section.style.display = 'none';
                chevron.style.transform = 'rotate(0deg)';
            }
        }

        function toggleCollapsible(id) {
            const element = document.getElementById(id);
            const chevron = document.getElementById(id + '-chevron');
            element.classList.toggle('hidden');
            chevron.classList.toggle('rotate-180');
        }

        document.getElementById('ttl-enabled').addEventListener('change', function() {
            const panel = document.getElementById('ttl-settings-panel');
            panel.style.display = this.checked ? 'block' : 'none';
        });

        async function loadTTLSettings() {
            try {
                const response = await fetch('/api/ttl/settings', {
                    credentials: 'same-origin'
                });
                if (!response.ok) {
                    updateTTLBadge(false);
                    return;
                }
                const data = await response.json();
                if (data.settings) {
                    document.getElementById('ttl-enabled').checked = data.settings.enabled;
                    document.getElementById('ttl-sensitivity').value = data.settings.sensitivity || 'medium';
                    document.getElementById('ttl-alert-threshold').value = data.settings.alert_threshold || 5;
                    document.getElementById('ttl-auto-block').checked = data.settings.auto_block;
                    document.getElementById('ttl-settings-panel').style.display = data.settings.enabled ? 'block' : 'none';
                    updateTTLBadge(data.settings.enabled);
                }
                loadTTLViolations();
            } catch (error) {
                console.error('Failed to load TTL settings:', error);
                updateTTLBadge(false);
            }
        }

        function updateTTLBadge(enabled) {
            const badge = document.getElementById('ttl-status-badge');
            if (enabled) {
                badge.textContent = 'Enabled';
                badge.className = 'px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700';
            } else {
                badge.textContent = 'Disabled';
                badge.className = 'px-2 py-1 text-xs font-medium rounded-full bg-gray-200 text-gray-600';
            }
        }

        async function saveTTLSettings() {
            const settings = {
                enabled: document.getElementById('ttl-enabled').checked,
                sensitivity: document.getElementById('ttl-sensitivity').value,
                auto_block: document.getElementById('ttl-auto-block').checked,
                alert_threshold: parseInt(document.getElementById('ttl-alert-threshold').value)
            };
            try {
                const response = await fetch('/api/ttl/settings', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'same-origin',
                    body: JSON.stringify(settings)
                });
                const msg = document.getElementById('ttl-save-message');
                if (response.ok) {
                    msg.textContent = '✓ Saved';
                    msg.className = 'text-sm text-green-600 self-center';
                    updateTTLBadge(settings.enabled);
                } else {
                    msg.textContent = '✗ Failed';
                    msg.className = 'text-sm text-red-600 self-center';
                }
                setTimeout(() => msg.textContent = '', 3000);
            } catch (error) {
                console.error('Failed to save TTL settings:', error);
            }
        }

        async function loadTTLViolations() {
            try {
                const response = await fetch('/api/ttl/violations?limit=10', {
                    credentials: 'same-origin'
                });
                if (!response.ok) return;
                const data = await response.json();
                const container = document.getElementById('ttl-violations-content');
                const violations = data.violations || [];
                
                document.getElementById('stat-active-violations').textContent = violations.filter(v => !v.resolved).length;
                document.getElementById('stat-clients-flagged').textContent = violations.length;
                
                if (violations.length === 0) {
                    container.innerHTML = '<div class="p-3 text-center text-xs text-gray-500">No violations detected ✓</div>';
                } else {
                    container.innerHTML = violations.map(v => `
                        <div class="p-2 border-b border-gray-100 flex items-center justify-between text-xs">
                            <div>
                                <span class="font-mono text-gray-700">${v.client_mac}</span>
                                <span class="ml-2 px-1.5 py-0.5 rounded text-white text-[10px] ${v.severity === 'high' ? 'bg-red-500' : v.severity === 'critical' ? 'bg-red-700' : 'bg-orange-500'}">${v.severity}</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="text-gray-500">${v.violation_count} violations</span>
                                ${!v.resolved ? `<button onclick="resolveTTLViolation(${v.id})" class="text-blue-600 hover:underline">Resolve</button>` : '<span class="text-green-600">✓</span>'}
                            </div>
                        </div>
                    `).join('');
                }
            } catch (error) {
                console.error('Failed to load violations:', error);
            }
        }

        async function loadTTLAnomalies() {
            try {
                const response = await fetch('/api/ttl/anomalies?limit=10', {
                    credentials: 'same-origin'
                });
                if (!response.ok) return;
                const data = await response.json();
                const container = document.getElementById('ttl-anomalies-content');
                const anomalies = data.anomalies || [];
                
                document.getElementById('stat-total-anomalies').textContent = anomalies.length;
                
                if (anomalies.length === 0) {
                    container.innerHTML = '<div class="p-3 text-center text-xs text-gray-500">No anomalies recorded</div>';
                } else {
                    container.innerHTML = anomalies.map(a => `
                        <div class="p-2 border-b border-gray-100 text-xs">
                            <div class="flex items-center justify-between">
                                <span class="font-mono text-gray-700">${a.client_mac}</span>
                                <span class="text-gray-400">${new Date(a.created_at).toLocaleString()}</span>
                            </div>
                            <div class="mt-1">
                                <span class="px-1.5 py-0.5 rounded bg-yellow-100 text-yellow-700 text-[10px]">${a.anomaly_type}</span>
                                <span class="ml-2 text-gray-500">${a.severity}</span>
                            </div>
                        </div>
                    `).join('');
                }
            } catch (error) {
                console.error('Failed to load anomalies:', error);
            }
        }

        async function resolveTTLViolation(id) {
            try {
                const response = await fetch(`/api/ttl/violations/${id}/resolve`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'same-origin',
                    body: JSON.stringify({ notes: 'Resolved by admin' })
                });
                if (response.ok) {
                    loadTTLViolations();
                }
            } catch (error) {
                console.error('Failed to resolve violation:', error);
            }
        }

        // Auto-hide notifications after 5 seconds
        setTimeout(() => {
            const successMsg = document.getElementById('successNotification');
            const errorMsg = document.getElementById('errorNotification');
            if (successMsg) successMsg.style.opacity = '0';
            if (errorMsg) errorMsg.style.opacity = '0';
        }, 5000);
    </script>
</body>
