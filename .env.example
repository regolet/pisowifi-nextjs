# ============================================
# PISOWifi Configuration - SECURITY SETTINGS
# ============================================
# IMPORTANT: Copy this file to .env and update ALL values
# NEVER commit .env to version control!

# --------------------------------------------
# CRITICAL SECURITY - MUST CHANGE IN PRODUCTION
# --------------------------------------------

# JWT Secret - MUST be a strong random string (min 32 chars)
# Generate with: openssl rand -base64 64
JWT_SECRET="CHANGE_ME_TO_A_STRONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS"

# Database URL - CHANGE credentials in production!
# For SQLite (default): Leave empty or use file path
# For PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL=""

# NextAuth Secret - MUST be a strong random string
NEXTAUTH_SECRET="CHANGE_ME_TO_ANOTHER_STRONG_RANDOM_STRING"
NEXTAUTH_URL="http://localhost:3000"

# --------------------------------------------
# GPIO Configuration
# --------------------------------------------
GPIO_SERVICE_URL="http://localhost:3001"
GPIO_PIN_COIN="3"
GPIO_PIN_LED="5"

# --------------------------------------------
# Network Configuration
# --------------------------------------------
PISOWIFI_NETWORK="192.168.100.0/24"
PISOWIFI_GATEWAY="192.168.100.1"
PISOWIFI_DHCP_RANGE_START="192.168.100.10"
PISOWIFI_DHCP_RANGE_END="192.168.100.50"

# --------------------------------------------
# Captive Portal Settings
# --------------------------------------------
PORTAL_REDIRECT_URL="http://192.168.100.1:3000"
PORTAL_NAME="PISOWifi"
PORTAL_COMPANY="Your Company"

# --------------------------------------------
# WebSocket Configuration
# --------------------------------------------
WEBSOCKET_PORT="3002"

# --------------------------------------------
# Environment
# --------------------------------------------
# Set to 'production' in production environment
# This enables security features like:
# - Require JWT_SECRET (no fallback)
# - Secure cookies
# - Reduced error verbosity
NODE_ENV="development"